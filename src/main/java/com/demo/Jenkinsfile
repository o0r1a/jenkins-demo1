pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/jenkins-demo.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Unit Test') {
            steps {
                sh 'mvn test || true'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Simulating deployment...'
                sh 'echo "Deployed successfully!"'
            }
        }
    }
}
